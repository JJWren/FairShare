@model IReadOnlyCollection<string>
@{
    ViewData["Title"] = "Select State";
}
<div class="container my-5">
    <h1 class="h4 mb-4 text-center">Choose Your State</h1>
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">No calculators registered.</div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-md-4">
                <form method="get" asp-controller="States" asp-action="Index">
                    <label for="state" class="form-label">State</label>
                    <select id="state" name="state" class="form-select">
                        @foreach (string? state in Model)
                        {
                            <option value="@state">@state</option>
                        }
                    </select>
                    <div class="text-center mt-3">
                        <button class="btn btn-primary" type="submit">Continue</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
