{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "FairShare": "Information"
    }
  },
  "AllowedHosts": "*",
  "Ui": {
    "DefaultTheme": "auto" // light | dark | auto
  },
  "ConnectionStrings": {
    "Default": "Data Source=fairshare.db"
  },
  "Auth": {
    "AllowSelfRegistration": true
  },
  "Email": {
    "Smtp": {
      "Host": "smtp.example.com",
      "Port": 587,
      "User": "apikey-or-username",
      "Password": "secret",
      "EnableSsl": true
    },
    "From": "FairShare <no-reply@fairshare.local>"
  },
  "AdminSeed": {
    "Enabled": true,
    "User": "admin",
    "Password": "",
    "LogGeneratedPassword": true
  }
}
